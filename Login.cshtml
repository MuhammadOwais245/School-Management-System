@model SchoolManagement.Models.LoginVM


<h1 class="page-title">School Management System</h1>


<div class="d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <h3 class="text-center mb-3">Welcome Back</h3>
        <p class="text-muted text-center mb-4">Login to your account</p>

        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter Username" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button class="btn btn-success w-100 mt-2">Login</button>

            <p class="text-center mt-3">
                Don’t have an account?
                <a href="/Account/Register" class="text-decoration-none">Register</a>
            </p>
        </form>
    </div>
</div>
